<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<ImageView
        android:id="@+id/img_noti_home4"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_width="50dp" android:layout_height="54dp"/>
    <LinearLayout
            android:orientation="vertical"

            android:layout_width="match_parent" android:layout_height="64dp">
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="right"
                android:paddingRight="15dp"
                android:paddingLeft="5dp"
                android:layout_width="match_parent" android:layout_height="30dp">
            <TextView android:id="@+id/tv_titel_home4"
                      android:text="ss"
                      android:textSize="18dp"
                      android:textColor="@color/white"
                      android:layout_width="150dp" android:layout_height="34dp"/>
            <Button

                    android:id="@+id/btn_stop_home4"
                    android:text="暂停"
                    android:layout_width="50dp" android:layout_height="34dp"/>
            <Button

                    android:id="@+id/btn_rego_home4"
                    android:text="继续"
                    android:layout_width="50dp" android:layout_height="34dp"/>
            <Button

                    android:text="取消"
                    android:id="@+id/btn_cancel_home4"
                    android:layout_width="50dp" android:layout_height="34dp"/>
        </LinearLayout>

        <ProgressBar
                android:id="@+id/pb_noti_home4"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100" android:progress="0"
                android:layout_width="match_parent" android:layout_height="30dp"/>

    </LinearLayout>


</LinearLayout>