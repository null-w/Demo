<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >


    <EditText
            android:id="@+id/et_userId"
            android:hint="请输入ID"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="5dp"
            android:background="@drawable/bg_edittext_login"
            android:layout_width="match_parent" android:layout_height="40dp"/>
    <EditText
            android:id="@+id/et_userName"
            android:hint="请输入用户名"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="5dp"
            android:background="@drawable/bg_edittext_login"
            android:layout_width="match_parent" android:layout_height="40dp"/>
    <EditText
            android:id="@+id/et_userPwd"
            android:hint="请输入密码"
            android:paddingLeft="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_edittext_login"
            android:layout_width="match_parent" android:layout_height="40dp"/>
    <EditText
            android:id="@+id/et_cUserPwd"
            android:hint="请再次输入密码"
            android:paddingLeft="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_edittext_login"
            android:layout_width="match_parent" android:layout_height="40dp"/>
    <EditText
            android:id="@+id/et_userRole"
            android:hint="请输入角色"
            android:paddingLeft="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_edittext_login"
            android:layout_width="match_parent" android:layout_height="40dp"/>
    <Button
            android:id="@+id/btn_reg_save"
            android:text="保存"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_selector_login"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/btn_reg_reset"
            android:text="重置"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_selector_login"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>